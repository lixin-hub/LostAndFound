<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mine_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#1976D2"
        android:minHeight="?attr/actionBarSize"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <LinearLayout
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
         android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
    <TextView
        android:layout_margin="2dp"
        android:id="@+id/mine_home1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击修改地址："
      />

    <TextView
        android:text="重庆——潜江"
        android:id="@+id/home_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />

        </LinearLayout>
            <View
                android:layout_marginRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33608E"
                />
            <TextView
                android:id="@+id/mine_nikname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="点击修改昵称"
                android:textColor="#0A7BEA"
                android:textSize="18sp"
                />
            <View
              android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33608E"
                />
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_margin="2dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="账号："
                   android:textColor="#077EF4"
                   />
               <TextView
                   android:id="@+id/mine_userName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:text="12345678"
                   android:textColor="#0F7DEA"
                   />
           </LinearLayout>


            <View
                android:layout_marginRight="1dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33608E"
                />
        </LinearLayout>

        <ImageView
            android:layout_gravity="right"
            android:id="@+id/mine_image"
            android:scaleType="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image" />

    </LinearLayout>


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/mine_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F74A8"
        android:text="修改密码"
      />

    <ImageView
        android:layout_gravity="center"
        android:layout_width="184dp"
        android:layout_height="153dp"
        android:src="@drawable/cqut" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="#43719E"
            android:text="CQUT"
            android:textSize="18sp"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_gravity="center|bottom"
            android:layout_margin="2dp"
            android:background="#33608E" />
    <Button
        android:id="@+id/mine_bt_sginout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#5E8FBF"
        android:text="注销并退出"
        />

        <com.example.belost.Jbox2d.MySurfaceView
            android:id="@+id/mysurface"
            android:layout_gravity="bottom"
            android:layout_marginBottom="?actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="0dp"
        android:layout_gravity="bottom"
        android:id="@+id/found_buttom_inearlayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#59A3ED"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/mine_bt_lost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/lost" />

        <ImageButton
            android:id="@+id/mine_bt_found"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/test" />

        <ImageButton
            android:id="@+id/mine_bt_mine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/mine" />
    </LinearLayout>

</FrameLayout>