<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/found_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#356C05"
        />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/found_swipe_refresh"
        android:layout_marginTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/found_Recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/found_buttom_inearlayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#7ECC3A"
        android:orientation="horizontal"
       >

        <ImageButton
            android:id="@+id/found_bt_lost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/lost" />

        <ImageButton
            android:id="@+id/found_bt_found"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/test" />

        <ImageButton
            android:id="@+id/found_bt_mine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/mine" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/found_bt_float"
        android:layout_width="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="bottom|right"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_upload"/>

</FrameLayout>